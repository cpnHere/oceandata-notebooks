# install (locked) dependencies for oceandata-notebooks[hub]
RUN pip install --no-cache-dir --no-deps \
      --no-binary h5py \
      --no-binary netcdf4 \
      -r requirements.txt

# set a safer default editor
ENV EDITOR=nano

